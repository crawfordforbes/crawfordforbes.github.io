{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./src"],
      "@splidejs/react-splide": ["./node_modules/@splidejs/react-splide/dist/types/index.d.ts"],
      "@splidejs/react-splide/*": ["./node_modules/@splidejs/react-splide/dist/types/*"]
    }
  },
  "include": ["src"]
}
